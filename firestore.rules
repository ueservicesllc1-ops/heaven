rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // BANNERS: Acceso público (protegido por PIN en frontend)
    match /banners/{document} {
      allow read, write: if true;
    }

    // PRODUCTOS: Acceso público (protegido por PIN en frontend)
    match /products/{document} {
      allow read, write: if true;
    }

    // CONFIGURACIÓN: Acceso público (protegido por PIN en frontend)
    match /config/{document} {
      allow read, write: if true;
    }
    
    // MENSAJES DE CONTACTO: Todo el mundo puede CREAR, solo autenticados pueden LEER/EDITAR
    match /messages/{document} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    // SETTINGS (Permisos): Solo usuarios autenticados
    match /settings/{document} {
      allow read, write: if request.auth != null;
    }

    // Regla por defecto para cualquier otra cosa: Solo autenticados
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
